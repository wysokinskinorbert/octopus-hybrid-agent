/* ====== GLOBAL STYLES ====== */
Screen {
    layout: grid;
    grid-size: 1 2;
    grid-rows: 1fr auto;
    background: #1e1e1e;
}

/* ====== CHAT AREA ====== */
#chat_container {
    height: 1fr;
    width: 100%;
    overflow-y: scroll;
    padding: 0 1;
    background: #1e1e1e;
    scrollbar-size: 1 1;
}

/* Message Widget - Claude Code minimal style */
MessageWidget {
    background: #1e1e1e;
    margin-bottom: 0;
    padding: 0 1;
    height: auto;
}

/* Highlighted Code/Tool Blocks */
.code-block {
    background: #0d0d0d;
    border: solid #333333;
    color: #ce9178; /* VS Code string color style */
    padding: 0 1;
    margin: 0;
}

/* Role colors handled in Python - no borders needed */

/* Existing Global Styles maintained below where relevant */

/* ====== STATUS BAR (Enhanced) ====== */
#status_bar {
    height: 1;
    background: #007acc; /* VS Code Blue for status */
    color: #ffffff;
    padding: 0 1;
}

#status_bar #timer-label {
    text-style: bold;
    color: #ffffff;
}

#status_bar #model-stats {
    color: #eeeeee;
}

/* ====== ACTIVITY WIDGET (Minimalist Stream) ====== */
ActivityWidget {
    height: auto;
    margin: 0;
    background: #1e1e1e;
    padding: 0 1;
    border-left: wide #444444; 
}

.step { color: #888888; }
.step-running { color: #007acc; } /* Blue */
.step-done { color: #2ecc71; }
.step-error { color: #e74c3c; }
